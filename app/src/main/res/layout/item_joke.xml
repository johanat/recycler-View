<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/joke"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconEdit"
        tools:text="sdfasdfasdfasdfasdfasdasfasdfasdfasdfasdffdf" />

    <ImageView
        android:id="@+id/iconEdit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconEdit"
        app:layout_constraintEnd_toStartOf="@id/iconEdit"
        android:text="Remove"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="joke edit"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/iconEdit"
            app:layout_constraintTop_toTopOf="@id/iconEdit"
            android:visibility="gone"/>

        <Button
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@id/editText"
            app:layout_constraintTop_toTopOf="@id/editText"
            android:text="cancelar"
            android:textSize="8sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="Confirmar"
            app:layout_constraintStart_toEndOf="@id/cancelar"
            app:layout_constraintTop_toTopOf="@id/cancelar"
            android:layout_marginLeft="16dp"
            android:visibility="gone"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>